<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/design_default_color_primary_dark"
    tools:context=".HexadecimalPageFragment">

    <RelativeLayout
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bacground_image"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bottom_image"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_below="@id/ninse_page_costum_toolbar"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:src="@drawable/timer_bacground_image"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingHorizontal="16dp">
                <TextView
                    android:id="@+id/nines_page_cilc_counter"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="32dp"/>
                <TextView
                    android:id="@+id/nines_page_tv_timer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="00:00:00"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="50dp"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/frame"
            android:layout_marginHorizontal="12dp"
            android:layout_centerInParent="true">
        </ImageView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nines_page_rv"
            android:layout_width="328dp"
            android:layout_height="340dp"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:spanCount="3"
            android:layout_marginHorizontal="12dp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginHorizontal="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="88dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8">
                <ImageView
                    android:id="@+id/ninse_page_refresh_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/refresh"
                    android:padding="8dp"/>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img"/>
                <ImageView
                    android:id="@+id/nines_page_timer_pous_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_pause_24"
                    android:padding="8dp"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ninse_page_costum_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tool_bar_image"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puzzle Game"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/nines_page_bask_button"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:padding="10dp"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/nines_page_player_button"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_volume_up_24"
                android:layout_marginVertical="8dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>